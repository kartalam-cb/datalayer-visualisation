{
  "manifest_version": 3,
  "name": "DataLayer Visualiser",
  "version": "1.0.0",
  "description": "Visualize and monitor window.dataLayer in real-time with Google Tag Manager and analytics implementations",
  "devtools_page": "devtools.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
